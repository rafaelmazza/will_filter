<div class="wf_exporter_header">
  <div class="end">
    <%=link_to_function("&times;".html_safe, "wfExporter.hide()", :title=>"Close", :class => "close")%>
  </div>
  <%= t("export.title") %>
</div>

<div class="wf_exporter_container">

  <table style="width:100%" cellpadding="0px" cellspacing="0px;">
    <thead>
      <tr>
        <td><input type="checkbox" id="wf_fld_all" onClick="wfExporter.selectAllFields(this);" style="width:20px;"></td>
        <td><%= t("export.name") %></td>
        <td><%= t("export.type") %></td>
      </tr>        
    </thead>
    <tbody>
      <% @wf_filter.model_class.columns.each_with_index do |col, index| %>
      <tr>
          <td>
              <input type="checkbox" id="wf_fld_chk_<%=index%>" onClick="wfExporter.selectField(this);" style="width:20px;"><input type="hidden" id="wf_fld_name_<%=index%>" value="<%=col.name%>">
          </td>
          <td><%=col.name %></td>
          <td><%=col.type %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  
  <hr>
  <div class="center">
    <%= t('export.format') %>: <%= select_tag("wf_export_format_selector", options_for_select(@wf_filter.export_formats,  @wf_filter.format)) %>
  </div>
  <div class="center">
      <%=link_to_function("<span>#{t('export.export')}</span>".html_safe, "wfExporter.exportFilter()", :class => "wf_grey_button wf_pcb") %>
      <%=link_to_function("<span>#{t('export.cancel')}</span>".html_safe, "wfExporter.hide()", :class => "wf_grey_button wf_pcb") %>      
  </div>
</div>