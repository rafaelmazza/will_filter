<div class="actions">
  <%= t("filter.order.title") %>:
  <%= select_tag(:wf_order, options_for_select(wf_filter.condition_options, wf_filter.order), {:onChange=>"markDirty()"}) %>
  <%= select_tag(:wf_order_type, options_for_select(wf_filter.order_type_options, wf_filter.order_type), {:onChange=>"markDirty()"}) %>
  <%= t("filter.per_page") %>:
  <%= select_tag(:wf_per_page, options_for_select(wf_filter.per_page_options, wf_filter.per_page.to_s), {:onChange=>"markDirty()"}) %>
  &nbsp;&nbsp;
  <%=link_to_function("<span>#{t('filter.submit')}</span>".html_safe, "wfFilter.submit()", :class => "wf_grey_button wf_pcb") %>
</div>
<div>
  <%=link_to_function("<span>#{t('filter.conditions.add')}</span>".html_safe, "wfFilter.addCondition()", :class => "wf_grey_button wf_pcb") %>
  <%=link_to_function("<span>#{t('filter.conditions.clear')}</span>".html_safe, "wfFilter.removeAllConditions()", :class => "wf_grey_button wf_pcb") %>
  &nbsp;&nbsp;
  <span id="wf_loader" class="spinner" style="display:none;">
    <%=image_tag "will_filter/spinner.gif" %> <%= t('loading') %>
  </span>
</div>